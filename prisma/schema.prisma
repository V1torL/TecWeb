generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  senha     String
  tipo      UserType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  admin   Admin?
  client  Client?

  // Coisas do authjs
  image String?
  accounts Account[]
  sessions Session[]
  emailVerified DateTime?

  @@map("users")
}

model Admin {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  addStocks AddStock[]
  @@map("admins")
}

model Client {
  id     String @id @default(cuid())
  cpf    String @unique
  nome   String
  telefone String
  endereco String
  cidade   String
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  carts Cart[]
  @@map("clients")
}

enum UserType {
  ADMIN
  CLIENT
}

// coisas do Authjs
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  addStocks   AddStock[]
  productsInCarts ProductInCart[]
}

model AddStock {
  id             String   @id @default(cuid())
  count          Int
  createdAt      DateTime @default(now())
  productId      String
  adminId String

  product        Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  admin         Admin          @relation(fields: [adminId], references: [id], onDelete: Cascade)
}

model ProductInCart {
  id        String   @id @default(cuid())
  amount    Int
  cartId    String
  productId String

  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Cart {
  id        String   @id @default(cuid())
  clientId  String
  orderId   String?

  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  order     Order?   @relation(fields: [orderId], references: [id])
  products  ProductInCart[]
}

model Order {
  id          String   @id @default(cuid())
  status      String
  arrive_date DateTime?
  paymentId   String?

  payment     Payment? @relation(fields: [paymentId], references: [id])
  carts       Cart[]
}

model Payment {
  id         String   @id @default(cuid())
  method     String
  address    String
  total_paid Float
  orders     Order[]
}
